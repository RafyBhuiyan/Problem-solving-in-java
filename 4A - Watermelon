import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        int start;
        Scanner myobj = new Scanner(System.in);
        start = myobj.nextInt();
        if(start>2 && start%2==0){
            System.out.println("YES");
        }
        else{
            System.out.println("NO");
        }
    }
}
